<%- include ("includes/header", { "title": "Compression" }) %>
<!DOCTYPE html>
<html>
<head>
	<title>Compression</title>
</head>
<body>
	<form action="/compress" method="post" enctype="multipart/form-data">
        <input type="file" name="file" required>
        <button type="submit">Стиснути файл</button>
    </form>
    
    <% if (message) { %>
        <p><%= message %></p>
    <% } %>
    
    <% if (typeof downloadURL !== "undefined") { %>
        <p><a href="<%= downloadURL %>" download>Скачати стиснений файл</a></p>
    <% } %>
</body>
</html>
